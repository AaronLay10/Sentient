generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id @default(cuid())
  name       String   @unique
  created_at DateTime @default(now())
  venues     Venue[]
  rooms      Room[]
  users      User[]
  controllers Controller[]
  devices     Device[]
  scenes      Scene[]
  puzzles     Puzzle[]
}

model Venue {
  id         String   @id @default(cuid())
  clientId   String
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  name       String
  address    String?
  city       String?
  state      String?
  zipCode    String?
  created_at DateTime @default(now())
  rooms      Room[]

  @@unique([clientId, name])
  @@index([clientId])
}

model Room {
  id         String   @id @default(cuid())
  clientId   String
  venueId    String
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  venue      Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  name       String
  room_id    String?  @unique
  created_at DateTime @default(now())
  controllers Controller[]
  devices     Device[]
  scenes      Scene[]
  puzzles     Puzzle[]

  @@unique([venueId, name])
  @@index([clientId])
  @@index([venueId])
}

enum UserRole {
  OWNER
  GM
  TECH
  VIEWER
}

model User {
  id            String   @id @default(cuid())
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  email         String   @unique
  password_hash String
  role          UserRole @default(GM)
  created_at    DateTime @default(now())
}

model Controller {
  id                   String   @id
  clientId             String
  roomId               String
  client               Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  room                 Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  controller_type      String
  friendly_name        String
  description          String?
  hardware_type        String?
  hardware_version     String?
  firmware_version     String?
  ip_address           String?
  mac_address          String?
  heartbeat_interval_ms Int?
  capability_manifest  Json?
  device_count         Int?
  pending_devices      Int?
  last_seen            DateTime?
  created_at           DateTime @default(now())
  devices              Device[]

  @@index([clientId])
  @@index([roomId])
}

model Device {
  id             String   @id
  controllerId   String
  clientId       String
  roomId         String
  controller     Controller @relation(fields: [controllerId], references: [id], onDelete: Cascade)
  client         Client     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  room           Room       @relation(fields: [roomId], references: [id], onDelete: Cascade)
  friendly_name  String
  device_type    String
  device_category String?
  properties     Json?
  current_state  Json?
  state_updated_at DateTime?
  last_seen      DateTime?
  created_at     DateTime @default(now())
  actions        DeviceAction[]

  @@index([controllerId])
  @@index([clientId])
  @@index([roomId])
  @@unique([controllerId, id])
}

model DeviceAction {
  id              String   @id @default(cuid())
  deviceId        String
  device          Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  action_id       String
  friendly_name   String?
  description     String?
  mqtt_topic      String
  safety_critical Boolean  @default(false)
  duration_ms     Int?
  created_at      DateTime @default(now())

  @@unique([deviceId, action_id])
  @@index([deviceId])
}

model Scene {
  id          String   @id @default(cuid())
  clientId    String
  roomId      String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  name        String
  description String?
  graph       Json     // Stores nodes and edges for visual flow
  active      Boolean  @default(true)
  order       Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([clientId])
  @@index([roomId])
  @@unique([roomId, name])
}

model Puzzle {
  id              String   @id @default(cuid())
  clientId        String
  roomId          String
  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  room            Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  graph           Json     // Stores nodes and edges for puzzle logic flow
  timeout_seconds Int?     // Optional timeout for puzzle
  hint_text       String?  // Optional hint for players
  active          Boolean  @default(true)
  order           Int      @default(0)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@index([clientId])
  @@index([roomId])
  @@unique([roomId, name])
}

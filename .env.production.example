# ============================================
# Sentient Engine - Production Configuration
# ============================================

# ===================
# Database
# ===================
POSTGRES_USER=sentient
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=sentient_prod

# Connection string for services
DATABASE_URL=postgres://sentient:CHANGE_ME_STRONG_PASSWORD@postgres:5432/sentient_prod

# ===================
# Redis
# ===================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_URL=redis://:CHANGE_ME_STRONG_PASSWORD@redis:6379

# ===================
# MQTT
# ===================
MQTT_URL=mqtt://mqtt:1883
# Optional: Add MQTT authentication if configured
# MQTT_USERNAME=sentient
# MQTT_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===================
# API Service
# ===================
NODE_ENV=production
API_PORT=3000

# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_RANDOM_STRING_32_CHARS

# Internal registration token for controller/device registration
# Generate with: openssl rand -hex 32
INTERNAL_REG_TOKEN=CHANGE_ME_INTERNAL_TOKEN

# ===================
# Realtime Gateway
# ===================
WS_PORT=3002

# ===================
# Orchestrator Service
# ===================
LOG_LEVEL=info

# ===================
# Domain Configuration
# ===================
# Your production domain (for CORS, etc.)
DOMAIN=sentient.yourdomain.com

# ===================
# GitHub Container Registry
# ===================
# Update these with your actual GitHub username/org
GHCR_USERNAME=yourusername
GHCR_REGISTRY=ghcr.io/yourusername

# ===================
# Optional: Monitoring & Logging
# ===================
# SENTRY_DSN=
# LOG_DRAIN_URL=

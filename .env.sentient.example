# Sentient Engine shared environment template
# Copy to .env.sentient.local for development and .env.sentient.prod on the server

# === Database ===
POSTGRES_USER=sentient
POSTGRES_PASSWORD=sentient
POSTGRES_DB=sentient
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://sentient:sentient@postgres:5432/sentient?schema=public

# === Redis ===
REDIS_URL=redis://redis:6379

# === MQTT Broker ===
MQTT_URL=mqtt://sentientengine.ai:1883
MQTT_USERNAME=sentient
MQTT_PASSWORD=sentient

# === API / Auth ===
API_PORT=3000
JWT_SECRET=replace_me
JWT_EXPIRES_IN=1d
INTERNAL_REG_TOKEN=replace_me

# === Realtime Gateway ===
WS_PORT=3002

# === UI Build Overrides (optional) ===
UI_VITE_API_URL=https://sentientengine.ai/api
UI_VITE_WS_URL=wss://sentientengine.ai/ws
